{
  "ci": {
    "preset": "lighthouse:recommended",
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.56}],
        "categories:accessibility": ["error", {"minScore": 0.94}],
        "categories:best-practices": ["error", {"minScore": 0.79}],
        "categories:seo": ["error", {"minScore": 0.60}],
        "pwa-fast-reliable": ["error", {"minScore": 0.33}],
        "pwa-installable": ["error", {"minScore": 0}],
        "pwa-optimized": ["error", {"minScore": 0.14}]
      }
    },
    "collect": {
      "staticDistDir": "./public",
      "settings": {
        "chromeFlags": ["--enable-webgl2-compute-context", "--use-fake-device-for-media-stream", "--use-fake-ui-for-media-stream"]
      }
    }
  }
}